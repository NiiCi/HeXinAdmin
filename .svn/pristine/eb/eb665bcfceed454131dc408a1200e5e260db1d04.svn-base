/*
 * 取当天时间的0:0:0的秒数
 */
	public static long getTodayTime(){
		long ts=System.currentTimeMillis() / 1000;
		long daySecond = 60 * 60 * 24;
	    long Time = ts - (ts + 8 * 3600) % daySecond;
	    return Time;
	}
